		body {
            margin: 30px 4%;
            background-color: black;
            font-family: 'Courier New', Courier, monospace;
            color: #00ff00;
        }
	</style>
    <script>
        import "../scripts/theme.js";
        import "../scripts/translations.js";
        import "../scripts/resume.js";
    </script>
</Layout>