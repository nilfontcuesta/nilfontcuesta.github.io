---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import '../styles/resume.css';
import HeaderControls from '../components/HeaderControls.astro';
---

<Layout title="About me | Nil Font i Cuesta">
    <section id="main">
        <HeaderControls />

        <h1 id="title">
            <a href="/" data-i18n="resume-name">Nil Font i Cuesta</a>
        </h1>

        <div id="subtitle">
            <span class="small-text" data-i18n="resume-first-subtitle"></span>
            <span class="small-text" data-i18n="resume-second-subtitle"></span>
        </div>

        <small id="contact">
            <a href="https://www.linkedin.com/in/nilfontcuesta/" target="_blank">linkedin</a> ·
            <a href="https://github.com/nilfontcuesta" target="_blank">github</a> ·
            <a href="mailto:hello@nilfontcuesta.dev">hello@nilfontcuesta.dev</a> |
            <a href="/CV-NilFont-2026.pdf" target="_blank" data-i18n="resume-download-pdf"></a>
        </small>

        <hr>
        
        <div id="description"></div>

        <h2 data-i18n="resume-subtitle-experience"></h2>
        
        <h3 class="collapsible" data-i18n="wallapop-title"></h3>
        <div class="content">
            <p><a href="https://www.wallapop.com" target="_blank">Wallapop</a><span data-i18n="wallapop-description"></span></p>
