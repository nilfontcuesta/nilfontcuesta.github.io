---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import HeaderControls from '../components/HeaderControls.astro';
---

<Layout title="Nil Font i Cuesta">
    <div class="terminal">
        <div class="header-controls">
            <HeaderControls />
        </div>
        <div id="text"></div>
        <div id="menu">
            [<a href="/resume" class="button-home" data-i18n="welcome-menu-resume">Resume</a>]
            [<a href="https://www.linkedin.com/in/nilfontcuesta/" target="_blank" class="button-home" data-i18n="welcome-menu-linkedin">LinkedIn</a>]
        </div>
    </div>
    <div class="home-footer-wrapper">
        <Footer />
    </div>
	<style>
		body {
			margin: 0;
			padding: 0;
			display: flex;
			justify-content: center;
			align-items: center;
			background-color: black;
			font-family: 'Courier New', Courier, monospace;
			color: #00ff00;
			overflow: hidden;
			height: 100vh;
		}
	</style>

    <script>
        import "../scripts/theme.js";
        import "../scripts/translations.js";
        import "../scripts/typing.js";
    </script>
</Layout>