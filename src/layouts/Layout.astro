---
import '../styles/global.css';
import '../styles/theme.css';
import '../styles/translations.css';
interface Props {
	title: string;
}
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />

		<meta property="og:url" content="https://nilfontcuesta.dev" />
		<meta property="og:description" content="Official website of Nil Font i Cuesta, a Software Engineer based in Barcelona." />
		<meta property="og:image" content="https://nilfontcuesta.dev/nilfontcuesta_200x200.png" />
		<meta property="og:image:width" content="200" />
		<meta property="og:image:height" content="200" />
		<meta property="og:type" content="website" />
		<meta property="og:title" content="Nil Font i Cuesta" />

		<title>{title}</title>
		<link rel="icon" href="/nilfontcuesta.ico" />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
	</head>
	<body>
		<slot />
	</body>
</html>