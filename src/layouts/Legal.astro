---
import Layout from './Layout.astro';
import Footer from '../components/Footer.astro';
import '../styles/resume.css'; 
import '../styles/theme.css';
import HeaderControls from '../components/HeaderControls.astro';

const { frontmatter } = Astro.props;
---

<Layout title={`${frontmatter.title} | Nil Font i Cuesta`}>
    <section id="main">
        <HeaderControls />

        <div class="legal-container">
            <nav id="menu-back-nav" class="back-nav small-text">
                [<a href="/" data-i18n="legal-back">back</a>]
            </nav>
            
            <main class="legal-content">
                <h1 class="large-text">{frontmatter.title}</h1>
                <p class="small-text" style="opacity: 0.7;">
                    <span data-i18n="legal-last-update">Last updated</span>: {frontmatter.date}
                </p>
                <hr />
                
                <article class="markdown-body">
                    <slot /> 
                </article>
            </main>
        </div>

        <Footer />
    </section>
</Layout>

<style>
    body {
        margin: 30px 4%;
        background-color: black;
        font-family: 'Courier New', Courier, monospace;
        color: #00ff00;
    }

    #menu-back-nav a {
        color: #00ff00;
        text-decoration: none;
        margin: 0 10px;
    }

    #menu-back-nav a:hover {
        text-decoration: underline;
    }

    body.light-mode #menu-back-nav a {
        color: #2380ba;
    }

    body.dark-mode #menu-back-nav a {
        color: #00ff00;
    }

    .markdown-body p, .markdown-body li {
        color: inherit;
    }
</style>

<style is:global>
    /* 1. Forcem que el contingut del Markdown hereti el color del body */
    .markdown-body p, 
    .markdown-body li {
        color: inherit !important; /* Així agafarà el verd en dark i gris en light */
        font-size: 18px; /* small-text */
    }

    /* 2. Estilitzem la llista tipus terminal */
    .markdown-body ul {
        list-style: none !important;
        padding-left: 0 !important;
    }

    .markdown-body li {
        position: relative;
        padding-left: 1.5rem; 
        margin-bottom: 0.5rem;
    }

    /* El caràcter > davant de cada element de la llista */
    .markdown-body li::before {
        content: ">"; 
        position: absolute;
        left: 0;
        font-weight: bold;
        font-family: 'Courier New', Courier, monospace;
    }

    body.light-mode .markdown-body li::before {
        color: #2380ba;
    }

    body.darck-mode .markdown-body li::before {
        color: #00ff00;
    }
    .markdown-body h2 {
        margin-top: 2rem;
        color: inherit;
    }
</style>
<script>
    import "../scripts/legal.js";
</script>